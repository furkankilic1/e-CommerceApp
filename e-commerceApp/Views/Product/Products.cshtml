@using e_commerceApp.Models;
@model ProductCategoryLanguage
@{
    ViewBag.Title = "Products";
}

<table class="table table-bordered table-striped" style="width:17%;float:left; margin-right:10px;">
    <tr>
        <td class="text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-translate" viewBox="0 0 16 16">
                <path d="M4.545 6.714 4.11 8H3l1.862-5h1.284L8 8H6.833l-.435-1.286H4.545zm1.634-.736L5.5 3.956h-.049l-.679 2.022H6.18z" />
                <path d="M0 2a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v3h3a2 2 0 0 1 2 2v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-3H2a2 2 0 0 1-2-2V2zm2-1a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H2zm7.138 9.995c.193.301.402.583.63.846-.748.575-1.673 1.001-2.768 1.292.178.217.451.635.555.867 1.125-.359 2.08-.844 2.886-1.494.777.665 1.739 1.165 2.93 1.472.133-.254.414-.673.629-.89-1.125-.253-2.057-.694-2.82-1.284.681-.747 1.222-1.651 1.621-2.757H14V8h-3v1.047h.765c-.318.844-.74 1.546-1.272 2.13a6.066 6.066 0 0 1-.415-.492 1.988 1.988 0 0 1-.94.31z" />
            </svg>
        </td>
    </tr>
    @foreach (var language in Model.Languages)
    {
        <tr>
            <td class="text-center">
                <a style="color:crimson" href="@Url.Action("Products", "Product", new {@language.LanguageCode })">@language.LanguageCode</a>
            </td>
        </tr>
    }
       
    <tr>
        <td class="text-center" style="border-top:2px dashed black;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>
        </td>
    </tr>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td class="text-center">
                <a style="color:crimson" href="@Url.Action("Products", "Product", new {@category.CategoryName })">@category.CategoryName</a>
            </td>
        </tr>
    }
</table>

<table class="table table-bordered table-striped" style="width:80%;float:left; margin-bottom:70px;">

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var product in Model.Product)
        {
            <div class="card-group" style="margin:4px;">
                <div class="card text-dark bg-light text-center" style="width: 18rem;">
                    <h5 class="card-header" style="margin-bottom:10px; font-family:'Times New Roman'">@product.productCategory</h5>
                    <img src="@product.productImgUrl" class="card-img-top">
                    <div class="card-body">
                        <h6>@product.productPrice</h6>
                        <h5 class="card-title" style="border-top:1px solid black; border-block-color:crimson; padding:7px;">@product.productName</h5>
                        <p class="card-text" style="font-family: 'Arial, Helvetica, sans-serif'">
                            @if (product.productInfo.Length > 85)
                            {
                                @(product.productInfo.Substring(0, 82) +"...");
                            }
                            else
                            {
                                @product.productInfo
                            }
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-basket" viewBox="0 0 16 16">
                                <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1v4.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 13.5V9a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h1.217L5.07 1.243a.5.5 0 0 1 .686-.172zM2 9v4.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9H2zM1 7v1h14V7H1zm3 3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 4 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 6 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 8 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</table>
